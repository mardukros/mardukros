{
  "name": "marduk-ts",
  "version": "0.0.1",
  "description": "Marduk AGI Framework",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch & node --watch dist/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint .",
    "clean": "rimraf dist",
    "prepare": "npm run build",
    "memory:backup": "node dist/scripts/backup-memory.js",
    "memory:restore": "node dist/scripts/restore-memory.js",
    "memory:optimize": "node dist/scripts/optimize-memory.js",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "validate": "npm run lint && npm run test",
    "docs": "typedoc --out docs src",
    "precommit": "npm run validate",
    "deploy": "wrangler deploy",
    "dev:worker": "wrangler dev",
    "deploy:webcontainers": "npm run build && wrangler pages deploy ./dist"
  },
  "dependencies": {
    "@cloudflare/workers-types": "^4.20231218.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.1",
    "@types/string-similarity": "^4.0.2",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "expo": "^52.0.46",
    "express": "^5.1.0",
    "http": "^0.0.1-security",
    "itty-router": "^4.2.2",
    "lru-cache": "^11.1.0",
    "node-cache": "^5.1.2",
    "node-llama-cpp": "^2.8.16",
    "openai": "^4.24.1",
    "pino": "^9.6.0",
    "string-similarity": "^4.0.4",
    "typescript": "^5.3.3",
    "winston": "^3.17.0",
    "ws": "^8.18.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^20.19.7",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.3",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "prettier": "^3.1.1",
    "rimraf": "^5.0.5",
    "tempo-devtools": "^2.0.102",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typedoc": "^0.25.4",
    "wrangler": "^4.13.2"
  }
}
